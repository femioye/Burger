<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="top-bar">
            <img src="/assets/images/burger.png" alt="burger" />
            <h2> Yummy Burger for you! </h2>
        </div>
        <div class="col-md-6 text-center" class="task">
                <div class="row">
                    {{#each burger_data}} {{#unless this.devoured}} <div class="col-md-9 text-center">
                    <pre>{{id}}. {{burger_name}}</pre>
                </div>
                <div class="col-md-2 text-center">
                    <form class="devour-form button-size">
                        <input input type="hidden" class="burger_id" type="text" value={{id}}>
                        <br>
                        <button type="submit" class="btn btn-default">Devour it!</button>
                    </form>
                </div>
                {{/unless}} {{/each}}
            </div>
        </div>
        
        <div class="col-md-6 text-center" class="task">
             {{#each burger_data}}
            <p>Burger Name: {{this.burger_name}}</p>
            <p>Id Number: {{this.id}}</p>
            <p>Devoured: {{this.devoured}}</p>
            {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
                <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            
        </div>
    </div>
</div>